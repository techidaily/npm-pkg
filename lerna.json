{
  "version": "independent",
  "npmClient": "pnpm",
  "useWorkspaces": false,
  "exact": false,
  "conventionalCommits": true,
  "packages": [
    "packages/**",
    "distributions/**"
  ],
  "command": {
    "create": {
      "license": "MPL-2.0"
    },
    "publish": {
      "npmClient": "npm",
      "message": "chore(release): new release",
      "registry": "https://registry.npmjs.org",
      "ignoreChanges": [
        "**/test/fixture/**"
      ]
    },
    "version": {
      "noChangelog": true,
      "noGitTagVersion": true,
      "noPush": true
    },
    "init": {
      "exact": true
    }
  }
}